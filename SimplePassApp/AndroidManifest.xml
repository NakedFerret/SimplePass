<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nakedferret.simplepass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:name="com.nakedferret.simplepass.ApplicationSimplePass_"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="VaultRoom.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.nakedferret.simplepass.ui.ActMain_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.activeandroid.content.ContentProvider"
            android:authorities="com.nakedferret.simplepass"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name="com.nakedferret.simplepass.ui.ActSelectAccount_"
            android:label="@string/title_activity_act_select_account"
            android:theme="@style/PopupTheme" >
        </activity>
        <activity
            android:name="com.nakedferret.simplepass.ui.ActFragTest_"
            android:label="@string/title_activity_act_generic_frag_test"
            android:theme="@style/PopupTheme"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustPan" >
        </activity>

        <service
            android:name="com.nakedferret.simplepass.ServicePassword_"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>