<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nakedferret.simplepass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nakedferret.simplepass.ActMain_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.nakedferret.simplepass.PasswordStorageProvider"
            android:authorities="com.nakedferret.simplepass.provider"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name="com.nakedferret.simplepass.ActSelectAccount_"
            android:label="@string/title_activity_act_select_account" >
        </activity>
    </application>

</manifest>
